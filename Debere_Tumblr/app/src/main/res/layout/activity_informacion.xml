<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Informacion">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imagenInfo" android:contentDescription="@string/inicio"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtInfo"/>
    <TextView android:layout_width="219dp"
              android:id="@+id/txtInfo"
              android:layout_height="19dp" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
              app:layout_constraintHorizontal_bias="0.083"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="19dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtDescripcion" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imagenInfo" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/rv_example2" app:layout_constraintVertical_bias="0.024"
            android:layout_marginBottom="8dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="384dp"
            android:layout_height="270dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:id="@+id/rv_example2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDescripcion"/>
</android.support.constraint.ConstraintLayout>