<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#3581b8"
>
    <android.support.design.widget.TextInputLayout
            android:layout_width="379dp"
            android:layout_height="58dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textInputLayout"
            app:layout_constraintStart_toStartOf="parent">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:padding="10dp"
                android:drawableEnd="@drawable/lupa"
                android:hint="@string/buscar"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="387dp"
            android:layout_height="479dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            android:layout_below="@+id/textInputLayout" android:id="@+id/rv_example2" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            android:background="#FFFFFF" android:layout_marginStart="8dp" android:layout_marginTop="16dp"/>

    <!-- Footer -->


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="4"
                  android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
                  android:layout_alignParentStart="true"
                  android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/rv_pinterest"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="414dp"
            android:layout_height="61dp" app:srcCompat="@drawable/menu_tumblr"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>
